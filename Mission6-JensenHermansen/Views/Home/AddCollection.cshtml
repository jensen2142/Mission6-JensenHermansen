@{
    ViewData["Title"] = "Home Page";
}

@model Application

<div class="text-center">
<h1>Add to the collection</h1>

    <form method="post" style="max-width: 500px; margin: 0 auto;">
        <fieldset style="border: 1px solid #ccc; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); padding: 20px; background-color: #fff;">
            <legend style="font-weight: bold; margin-bottom: 10px;">Movie Survey</legend>


            <input type="hidden" asp-for="ApplicationId">
            <label asp-for="Category" style="display: block; margin-bottom: 8px;">Category:</label>
            <select asp-for="Category" style="width: 100%; padding: 8px; box-sizing: border-box; margin-bottom: 12px;">
                <option value="Action/Adventure">Action/Adventure</option>
                <option value="Comedy">Comedy</option>
                <option value="Drama">Drama</option>
                <option value="Family">Family</option>
                <option value="Horror/Suspense">Horror/Suspense</option>
                <option value="Misc.">Misc.</option>
                <option value="Television">Television</option>
                <option value="VHS">VHS</option>
            </select>
            <br />

            <label asp-for="Title" style="display: block; margin-bottom: 8px;">Title:</label>
            <input asp-for="Title" name="title" style="width: 100%; padding: 8px; box-sizing: border-box; margin-bottom: 12px;">
            <br />

            <label asp-for="Year" style="display: block; margin-bottom: 8px;">Year:</label>
            <input asp-for="Year" name="year" style="width: 100%; padding: 8px; box-sizing: border-box; margin-bottom: 12px;">
            <br />

            <label asp-for="Director" style="display: block; margin-bottom: 8px;">Director:</label>
            <input asp-for="Director" name="director" style="width: 100%; padding: 8px; box-sizing: border-box; margin-bottom: 12px;">
            <br />

            <label asp-for="Rating" style="display: block; margin-bottom: 8px;">Rating:</label>
            <select asp-for="Rating" style="width: 100%; padding: 8px; box-sizing: border-box; margin-bottom: 12px;">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
                <option value="NR">Not Rated</option>
            </select>
            <br />

            <label asp-for="edited" style="display: block; margin-bottom: 8px;">Edited?:</label>
            <select asp-for="edited" style="width: 100%; padding: 8px; box-sizing: border-box; margin-bottom: 12px;">
                <option value="True">Yes</option>
                <option value="False">No</option>
            </select>
            <br />

            <label asp-for="Lent" style="display: block; margin-bottom: 8px;">Lent to:</label>
            <input asp-for="Lent" style="width: 100%; padding: 8px; box-sizing: border-box; margin-bottom: 12px;">
            <br />

            <button type="submit" style="background-color: #4caf50; color: #fff; padding: 10px; border: none; border-radius: 4px; cursor: pointer;">Submit</button>
        </fieldset>
        <div asp-validation-summary="All"></div>
    </form>

</div>
